<div class="container" data-ng-controller="DentistCtrl as dentistCtrl">
  <div class="row text-center">
    <h2>Padrón de odontólogos</h2>
  </div>
  <div class="row padding-top-30">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="form-horizontal">
            <div class="form-group col-xs-6">
              <label for="inputSearch" class="col-xs-2 control-label search">Buscar</label>
              <div class="col-xs-8">
                <input type="text" class="form-control" id="inputSearch" placeholder="Ingrese cualquier campo" data-ng-model="dentistCtrl.searched">
              </div>
            </div>
            <div class="form-group col-xs-6 text-right">
              <div data-ng-show="dentistCtrl.searched.length > 3">
                <label for="buttonCreate" class="col-xs-10 control-label">
                  No encontrás al que buscas?
                </label>
              </div>
              <div class="col-xs-2" data-ng-show="dentistCtrl.searched.length > 3">
                <button class="btn btn-success" data-ui-sref="form.new">Crear</button>
              </div>
              <div class="col-xs-12" data-ng-hide="dentistCtrl.searched.length > 3">
                <button class="btn btn-success" data-ui-sref="form.new">Crear</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="panel-body panel-without-padding">
        <table class="table table-bordered table-without-margin">
          <thead>
          <tr>
            <th>Nueva</th>
            <th>Matrícula</th>
            <th data-ng-click="dentistCtrl.orderBy('surname')">Apellido</th>
            <th data-ng-click="dentistCtrl.orderBy('name')">Nombre</th>
            <th>Localidad</th>
            <th>Institución</th>
            <th>Calle</th>
            <th>Número</th>
            <th>Teléfono</th>
            <th>Celular</th>
            <th>E-mail</th>
            <th>Especialidad</th>
          </tr>
          </thead>
          <tbody data-ng-repeat="dentist in dentistCtrl.dentists | orderBy:dentistCtrl.fieldToOrder:dentistCtrl.reversed
                                                               | filter:dentistCtrl.searched">
          <tr class="row-pointer">
            <td>
              <button class="btn btn-xs btn-success" data-ng-click="dentistCtrl.openModal(dentist)"
                      data-uib-tooltip="Registrar nueva visita"
                      data-tooltip-placement="left"
                      data-tooltip-trigger="'mouseenter'"
                      data-tooltip-popup-delay="300">+
              </button>
            </td>
            <td data-ui-sref="form.edit({dentistId: dentist.id})">{{dentist.enrollment}}</td>
            <td data-ui-sref="form.edit({dentistId: dentist.id})">{{dentist.surname}}</td>
            <td data-ui-sref="form.edit({dentistId: dentist.id})">{{dentist.name}}</td>
            <td data-ui-sref="form.edit({dentistId: dentist.id})">{{dentist.location}}</td>
            <td data-ui-sref="form.edit({dentistId: dentist.id})">{{dentist.institution}}</td>
            <td data-ui-sref="form.edit({dentistId: dentist.id})">{{dentist.street}}</td>
            <td data-ui-sref="form.edit({dentistId: dentist.id})">{{dentist.number}}</td>
            <td data-ui-sref="form.edit({dentistId: dentist.id})">{{dentist.telephone}}</td>
            <td data-ui-sref="form.edit({dentistId: dentist.id})">{{dentist.cellphone}}</td>
            <td data-ui-sref="form.edit({dentistId: dentist.id})">{{dentist.email}}</td>
            <td data-ui-sref="form.edit({dentistId: dentist.id})">{{dentist.specialty}}</td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div data-ui-view></div>
