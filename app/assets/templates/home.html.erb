<div class="container">
  <div class="row text-center">
    <h2>Padrón de odontólogos</h2>
  </div>
  <div class="row">
    <div class="form-inline">
      <div class="col-xs-8">
        <div class="form-group">
          <label for="search">Buscar</label>
          <input type="text" class="form-control" id="search" placeholder="Ingrese cualquier campo" data-ng-model="searched">
        </div>
      </div>
    </div>
    <div class="col-xs-12" data-ng-show="searched.length > 1">
      <div class="form-group">
        <label for="buttonCreate">No encontrás al que buscas?</label>
        <button class="btn btn-primary" data-ui-sref="load_or_edit">Crear</button>
      </div>
    </div>
    <div class="col-xs-12">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Matrícula</th>
          <th>Apellido</th>
          <th>Nombre</th>
          <th>Localidad</th>
          <th>Institución</th>
          <th>Calle</th>
          <th>Número</th>
          <th>Teléfono</th>
          <th>Celular</th>
          <th>E-mail</th>
          <th>Especialidad</th>
          <th>Días y horarios de atención</th>
        </tr>
        </thead>
        <tbody data-ng-repeat="dentist in dentists | filter:searched">
        <tr data-ui-sref="load_or_edit" data-ng-click="viewOnly(dentist)">
          <td>{{dentist.enrollment}}</td>
          <td>{{dentist.surname}}</td>
          <td>{{dentist.name}}</td>
          <td>{{dentist.location}}</td>
          <td>{{dentist.institution}}</td>
          <td>{{dentist.street}}</td>
          <td>{{dentist.number}}</td>
          <td>{{dentist.telephone}}</td>
          <td>{{dentist.cellphone}}</td>
          <td>{{dentist.email}}</td>
          <td>{{dentist.specialty}}</td>
          <td>{{dentist.attention_datetime}}</td>
        </tr>
        </tbody>
      </table>
    </div>

    <div data-ui-view></div>

  </div>
</div>